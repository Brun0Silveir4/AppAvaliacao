<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblValores"
        android:text="Digite os dois nÃºmeros"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/PrimeiroValor"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:digits="1,2,3,4,5,6,7,8,9,0"
        android:labelFor="@+id/PrimeiroValor"
        android:autofillHints="name"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/SegundoValor"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:digits="1,2,3,4,5,6,7,8,9,0"
        android:labelFor="@+id/SegundoValor"
        android:autofillHints="name"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Calc"
        android:text="Cadastrar"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>